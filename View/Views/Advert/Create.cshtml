@using Advert.Domain.Dtos
@model AdvertListDto
<header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
    <div class="container-fluid px-4">
        <div class="page-header-content">
            <div class="row align-items-center justify-content-between pt-3">
           
                <div class="col-12 col-xl-auto mb-3">
                    <a class="btn btn-sm btn-light text-primary" asp-action="Index">
                        <i class="me-1" data-feather="arrow-left"></i>
                        Geri git
                    </a>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Main page content-->
<div class="container-fluid px-4">
    <form id="fromloading"  asp-controller="Advert" asp-action="Create" enctype="multipart/form-data">
       <input class="form-control" type="hidden" asp-for="Id" />
          <input class="form-control" type="hidden" asp-for="CompanyId" />
        <div class="row gx-4">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header">İlan Başlık</div>
                    <div class="card-body">
                        <input class="form-control" type="text" asp-for="PositionTitle" />
                    </div>
                </div>
                  <div class="card mb-4">
                    <div class="card-header">İlan Açıklama</div>
                    <div class="card-body">
                        <textarea class="form-control"  asp-for="PositionDesc" ></textarea>
                    </div>
                  </div>

                      <div class="card mb-4">
                    <div class="card-header">Yan Haklar</div>
                    <div class="card-body">
                        <textarea class="form-control"  asp-for="Benefits" ></textarea>
                    </div>
                  </div>

                        <div class="card mb-4">
                    <div class="card-header">İş Tipi</div>
                    <div class="card-body">
                        <textarea class="form-control"  asp-for="JobType" ></textarea>
                    </div>
                  </div>

                         <div class="card mb-4">
                    <div class="card-header">Ücret</div>
                    <div class="card-body">
                        <input class="form-control" type="text" asp-for="Wage" />                    
                        </div>
                  </div>
             
            </div>
             <div class="col-lg-4">
                <div class="card card-header-actions">
                    <div class="card-header">
                    
                    </div>
                    <div class="card-body">

                        <h6 class="mb-0 mt-1">Gösterim</h6>
                        <hr class="mt-2 mb-4">
                        <div class="mb-3">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="@Model.IsOnline"
                                       id="IsActived-One" value="false">
                                <label class="form-check-label" for="IsActived-One">Hayır</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="@Model.IsOnline"
                                       id="IsActived-Two" value="true">
                                <label class="form-check-label" for="IsActived-Two">Evet</label>
                            </div>
                        </div>
                        <div class="d-grid">
                            <button class="fw-500 btn btn-primary" type="submit">Kaydet</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
